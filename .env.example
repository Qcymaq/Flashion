# Flashion E-commerce Platform Environment Variables

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Replace with your MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/flashion?retryWrites=true&w=majority
DATABASE_NAME=flashion

# =============================================================================
# JWT SECURITY
# =============================================================================
# Generate a strong secret key for production
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=False

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Update with your domain for production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Update with your domain for production
REACT_APP_API_URL=http://localhost:8000/api
